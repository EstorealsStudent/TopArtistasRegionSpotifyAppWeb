﻿
@model TopArtistasRegionSpotifyAppWeb.Models.Artistum;

@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h3 class="text-danger"> ¿Esta seguro de eliminar al Artista?</h3>
<hr />
<div class="row">
    <div class="col-sm-4">

        <form asp-action="Eliminar" asp-controller="Home" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="mb-2">
                <label class="form-label" asp-for="Nombre">Nombre Artista</label>
                <input class="form-control form-control-sm" asp-for="Nombre" type="text" disabled />
            </div>

            <div class="mb-3">
                <label class="form-label" asp-for="IdPais">Pais</label>
                 <input class="form-control form-control-sm" asp-for="Opais.Nombre" type="text" disabled />
            </div>

            <div class="mb-2">

                 <button class="btn btn-danger btn-sm w-25" type="submit">Eliminar</button>
                 <a class="btn btn-dark btn-sm" asp-action="Index" asp-controller="Home">Volver</a>

            </div>

        </form>

    </div>
</div>