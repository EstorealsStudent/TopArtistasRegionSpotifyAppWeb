@model TopArtistasRegionSpotifyAppWeb.Models.ViewModels.ArtistaVM;
@{
    ViewData["Title"] = "Artista_Detalle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@if (Model.oArtista.Id == 0)
{

        <h1>Crear Artista</h1>
}
else
{
          <h1>Editar Artista</h1>
}


<div class="row">
    <div class="col-sm-4">

        <form asp-action="Artista_Detalle" asp-controller="Home" method="post">
            <input type="hidden" asp-for="oArtista.Id" />

            <div class="mb-2">
                <label class="form-label" asp-for="oArtista.Nombre">Nombre Artista</label>
                <input class="form-control form-control-sm" asp-for="oArtista.Nombre" type="text" />
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="oArtista.IdPais">Pais</label>
                <select class="form-select form-select-sm" asp-for="oArtista.IdPais" asp-items="@Model.oListaPais">
                    <option selected disabled>-- Seleccionar --</option>
                </select>
            </div>

            <div class="mb-2">

                @if (Model.oArtista.Id == 0)
                {
                        <button class="btn btn-primary btn-sm w-25" type="submit">Crear</button>
                }
                else
                {
                         <button class="btn btn-primary btn-sm w-25" type="submit">Actualizar</button>

                }
                 <a class="btn btn-dark btn-sm" asp-action="Index" asp-controller="Home">Volver</a>

            </div>

        </form>

    </div>
</div>

